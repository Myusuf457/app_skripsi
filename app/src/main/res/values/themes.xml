<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Latihan_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_utama</item>
        <item name="colorPrimaryVariant">@color/bg_edit_text</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
<!--    text Input Layout -->

        <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <item name="android:textColorHint">@color/black</item>
            <item name="hintTextColor">@color/black</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textStyle">normal</item>

        </style>

<!--    Edit Text Layout-->
        <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

<!--            <item name="android:background">@drawable/bg_edit_text</item>-->
            <item name="android:fontFamily">@font/poppins_bold</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:maxLines">1</item>
            <item name="singleLine">true</item>
        </style>

<!--    Text Judul -->
    <style name="TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/bg_utama</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
        <!--    Button Login-->
        <style name="ButtonLogin">

                <item name="android:background">@drawable/custom_button</item>
                <item name="backgroundTint">@color/bg_utama</item>
                <item name="android:fontFamily">@font/poppins_bold</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">20sp</item>
                <item name="android:textStyle">bold</item>
        </style>
</resources>